<div class="contenido">
<div class="contenedor">
  <h2 class="h3 text-center py-5">Cambio de contrase&ntilde;a</h2>

    <%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Formulario inv&aacute;lido</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group my-4">        
        <%= f.password_field :password, autofocus: true, placeholder:"Contraseña", class:"form-control" %>
      </div>
      <div class="form-group">        
        <%= f.password_field :password_confirmation, placeholder:"Confirmar contraseña", class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Cambiar contraseña", class:"btn btn-block btn-primary", id:"enviar"%>
      </div>
  <% end %>
  </div>
</div>