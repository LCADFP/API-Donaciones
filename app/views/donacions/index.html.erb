<p id="notice"><%= notice %></p>

<h1>Donacions</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Categoria</th>
      <th>Cantidad</th>
      <th>Img</th>
      <th>Descripcion</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donacions.each do |donacion| %>
      <tr>
        <td><%= donacion.nombre %></td>
        <td><%= donacion.estado %></td>
        <td><%= donacion.categoria %></td>
        <td><%= donacion.cantidad %></td>
        <td><%= donacion.img %></td>
        <td><%= donacion.descripcion %></td>
        <td><%= donacion.users %></td>
        <td><%= link_to 'Show', donacion %></td>
        <td><%= link_to 'Edit', edit_donacion_path(donacion) %></td>
        <td><%= link_to 'Destroy', donacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

